# Script
#     killmakes
#
# Description
#     Help script for killing running make executables.
#
#------------------------------------------------------------------------------

echo "Will kill all running make's..."
ps | grep make | sed 's=^[A-Z]==' | awk '{ print $1 }' | while read maketokill; do
  echo "Killing $maketokill ..."
  kill -9 $maketokill
done
echo "... all killed."
