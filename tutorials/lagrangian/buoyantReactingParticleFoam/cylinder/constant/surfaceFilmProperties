{
    model       laminar;
    Cf          0.005;
}

forces
{
    thermocapillary;
}

upperSurfaceModels
{
    heatTransfer
    {
        model    constant;
        c0       1e-8;
    }
}

lowerSurfaceModels
{
    heatTransfer
    {
        model   constant;
        c0      1e-8;
    }
