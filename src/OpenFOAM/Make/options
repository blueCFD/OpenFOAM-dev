LIB_LIBS = \
    -Wl,-whole-archive -lOSspecific -Wl,-no-whole-archive \
    -L$(FOAM_LIBBIN)/dummy -lPstream \
    -lz \
    -lregex \
    -L$(FOAM_EXT_LIBBIN) -lstack_trace

else

LIB_LIBS = \
    $(FOAM_LIBBIN)/libOSspecific.o \
    -L$(FOAM_LIBBIN)/dummy -lPstream \
    -lz

