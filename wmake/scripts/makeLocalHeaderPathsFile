# Script
#     makeLocalHeaderPathsFile
#
# Description
#     Constructs the local header include paths file, so that it's easier to
#     find local header files, which can be a problem for long paths on
#     Windows.
#
#------------------------------------------------------------------------------

# Provided by makefiles/files
HEADER_PATHS_FILE=$1

# Create the file
[ -e $HEADER_PATHS_FILE ] && rm $HEADER_PATHS_FILE
touch $HEADER_PATHS_FILE

# First we need to sort out which folders we should not use
TO_SIFT_OUT=$(find . -name Make -type d -printf '%h\n' | grep -v "^\.$" | sed -e 's=\(.*\)=-e "^\1" =g')

# Next we get the full list of possible folders and exclude those that don't matter

find . \
    \( -name lnInclude  \
       -o -name Make    \
       -o -name config  \
       -o -name noLink  \
    \) -prune \
    -o \( \
          -name '*.[CHh]'     \
          -o -name '*.[ch]xx' \
          -o -name '*.[ch]pp' \
          -o -name '*.type'   \
       \) \
    -printf '%h\n' | \
    grep -v -e '^\.$' | \
    sort -u | \
while read line
do
    if [ -n "$TO_SIFT_OUT" ]
    then
        echo $line | eval grep -v $TO_SIFT_OUT | \
        sed -e 's=\(.*\)=-I\1=g' >> $HEADER_PATHS_FILE
    else
        echo $line | \
        sed -e 's=\(.*\)=-I\1=g' >> $HEADER_PATHS_FILE
    fi
done

#------------------------------------------------------------------------------
